<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.brejral.mlbcardgame.game.GameView 
        android:id="@+id/gl_surface_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />
    
    <ImageView
        android:id="@+id/scoreboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/gl_surface_view"
        android:layout_alignRight="@id/gl_surface_view"
        android:clickable="true"
        android:src="@drawable/miniscoreboardtop" />
    
    <ImageView
        android:id="@+id/lineupbox"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/gl_surface_view"
        android:layout_alignLeft="@id/gl_surface_view"
        android:src="@drawable/lineupbox"
        android:scaleType="fitXY" />
    
    <ImageView 
        android:id="@+id/resultbox"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/gl_surface_view"
        android:layout_alignLeft="@id/gl_surface_view"
        android:src="@drawable/box"
        android:scaleType="fitXY"/>
        
    <TextView
        android:id="@+id/inning"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/scoreboard"
        android:layout_alignLeft="@id/scoreboard"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@android:color/white" />

   <TextView
        android:id="@+id/outs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/scoreboard"
        android:layout_alignLeft="@id/scoreboard"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@android:color/white" />
       
    <TextView
        android:id="@+id/awayTeamAbreviation"
        android:textColor="@android:color/white"
        android:layout_alignTop="@id/scoreboard"
        android:layout_alignLeft="@id/scoreboard"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
       
    <TextView
        android:id="@+id/awayRuns"
        android:textColor="@android:color/white"
        android:textSize="25sp"
         android:layout_alignTop="@id/scoreboard"
        android:layout_alignLeft="@id/scoreboard"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    
    <TextView
        android:id="@+id/homeTeamAbreviation"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_alignTop="@id/scoreboard"
        android:layout_alignLeft="@id/scoreboard"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    
    
    <TextView
        android:id="@+id/homeRuns"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_alignTop="@id/scoreboard"
        android:layout_alignLeft="@id/scoreboard"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
        
    <TextView
        android:id="@+id/resultText"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_alignTop="@id/resultbox"
        android:layout_alignLeft="@id/resultbox" />
    
    <TextView 
        android:id="@+id/battingOrderText"
        android:textColor="@android:color/white"
        android:typeface="monospace"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gl_surface_view"
        android:layout_alignLeft="@id/gl_surface_view"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
            
    <LinearLayout 
        android:id="@+id/pitchButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" 
        >
    </LinearLayout>
        
</RelativeLayout>