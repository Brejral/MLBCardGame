                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scrollbars="vertical" >"
                    <TableLayout
                    	android:id="@+id/awayTableLayout"
                    	android:layout_width="match_parent"
                    	android:layout_height="wrap_content" >
